@model string
@{
    ViewBag.Title = "Page2";
    Layout = "~/Views/Shared/_Layout.cshtml";
    AjaxOptions ajax = new AjaxOptions
    {
        UpdateTargetId = "tableBody"
        ,Url=Url.Action("Page2Data")
    };
}

<h2>Page2</h2>
<h2>5 Movies:</h2>
<table>
    <thead>
        <tr>
            <th>Name</th>
         </tr>
    </thead>
    <tbody class="movies5" id="tableBody">
        @Html.Action("Page2Data", new { name = Model })
    </tbody>
</table>

@using (Html.BeginForm())
{
    <div>
        @Html.TextBox("name")
        <button type="submit">Отобразить</button>
    </div>
}
<hr/>
@using (Html.BeginForm("Create", "Movie", FormMethod.Post))
{
    <p>Input name of movie: </p>
    @Html.TextBox("Name", "Input name")
    <p>Input release year:</p>
    @Html.TextBox("ReleaseYear", "Input year")
    <p><input type="submit" value="Create" /></p>
}
